{% extends 'base.html.twig' %}
{% block title %}Show pin
{% endblock %}
{% block stylesheets %}
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Show Pin{{pin.id}}</title>
	</head>
{% endblock %}
{% block body %}
	<div class="example-wrapper">
		<h1>{{pin.title}}</h1>
		<p>
			{{pin.description}}
		</p>
		<a href="{{path('app_pins_edit',{'id':pin.id})}}">Edit</a>
		{# <a href="{{path('app_pins_delete',{'id':pin.id})}}">Delete</a> #}

		<form action="{{ path('app_pins_delete', {'id':pin.id}) }}" method="POST">
			<input type="hidden" name="_method" value="DELETE" style="display:none;">
			<input type="submit" value="Delete Pin">
		</form>
		<a href=" {{ path('app_home') }} ">Back to Home page</a>
	</div>
{% endblock %}
